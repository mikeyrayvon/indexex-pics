// FONTS

// declare font families here

$font-sans = font-stack('Helvetica');
$font-serif = font-stack('Georgia');

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import 'fonts/icons/materialize-min'

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

// VARIABLES

$font-size-larger = 1.3rem

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = .001em
$font-tracking-wider = .05em

$color-black = rgb(0, 0, 0)
$color-brown = rgb(209, 187, 167)

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

h1,h2,h3,h4,h5,h6
  margin: 0

p, ul, ol
  margin-bottom: 1rem

ul
  list-style-type: disc
  margin-left: 1rem

ol
  list-style-type: decimal
  margin-left: 1rem

// FONT RULES

.font-sans
  font-family: $font-sans

.font-serif
  font-family: $font-serif

.font-larger
  font-size: $font-size-larger

em, .font-italic
  font-style: italic

strong, .font-bold
  font-weight: bold

.font-small-caps
  text-transform: uppercase
  font-size: .85em

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

// TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

// LINKS
$text-shadow-width = 3px

a,
a:active,
a:visited
  color: inherit
  text-underline-position: under

font-sizes($size-basic = 15px, $size-large = false)

  html
    font-size: $size-basic

  if ($size-large)
    h1, h2, .font-size-large
      font-size: $size-large
